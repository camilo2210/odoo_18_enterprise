<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_user_group_search" model="ir.ui.view">
        <field name="name">user.group.search</field>
        <field name="model">user.group</field>
        <field name="arch" type="xml">
            <search string="User Group Search">
                <field name="name"/>
                <field name="user_ids"/>
                <field name="access_studio_ids"/>
            </search>
        </field>
    </record>

    <record id="view_user_group_tree" model="ir.ui.view">
        <field name="name">user.group.tree</field>
        <field name="model">user.group</field>
        <field name="arch" type="xml">
            <list string="User Groups">
                <field name="name"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="access_studio_ids" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_user_group_form" model="ir.ui.view">
        <field name="name">user.group.form</field>
        <field name="model">user.group</field>
        <field name="arch" type="xml">
            <form string="User Group">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="user_ids" widget="many2many_tags"/>
                        <field name="access_studio_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_user_group" model="ir.actions.act_window">
        <field name="name">User Groups</field>
        <field name="res_model">user.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Manage custom user groups and assign users and access rules.
            </p>
        </field>
    </record>
</odoo>
