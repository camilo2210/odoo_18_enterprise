<odoo>
    <record id="view_access_studio_search" model="ir.ui.view">
        <field name="name">view.access.studio.search</field>
        <field name="model">access.studio</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_ids"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="all" string="All" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <separator/>
                <filter name="disable_debug" string="Disable Debug" domain="[('disable_debug', '=', True)]"/>
                <filter name="disable_login" string="Disable Login" domain="[('disable_login', '=', True)]"/>
                <separator/>
                <filter name="apply_without_companies" string="Apply Without Company"
                        domain="[('apply_without_companies', '=', True)]"/>
                <filter name="apply_by_user_groups" string="Access By User Group"
                        domain="[('apply_by_user_groups', '=', True)]"/>
                <separator/>
                <filter name="default_internal_user" string="Default Internal User"
                        domain="[('default_internal_user', '=', True)]"/>
                <filter name="default_portal_user" string="Default Portal User"
                        domain="[('default_portal_user', '=', True)]"/>
                <group>
                    <filter name="created_by" string="Created By" domain="[]" context="{'group_by': 'create_uid'}"/>
                    <filter name="apply_without_companies" string="Apply Without Company" domain="[]"
                            context="{'group_by': 'apply_without_companies'}"/>
                    <filter name="apply_by_user_groups" string="Access By User Group" domain="[]"
                            context="{'group_by': 'apply_by_user_groups'}"/>
                </group>
                <searchpanel>
                    <field name="user_ids" select="multi" string="Users" enable_counters="1"/>
                    <field name="company_ids" select="multi" string="Companies" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_access_studio_list" model="ir.ui.view">
        <field name="name">view.access.studio.list</field>
        <field name="model">access.studio</field>
        <field name="arch" type="xml">
            <list
                    decoration-muted="(not active)"
                    decoration-success="active">
                <field name="name"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_access_studio_form" model="ir.ui.view">
        <field name="name">view.access.studio.form</field>
        <field name="model">access.studio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" invisible="1"/>
                        <button invisible="not active" class="oe_stat_button" name="toggle_active" type="object"
                                icon="fa-stop">
                            <div class="o_stat_info o_form_field">
                                <span style="font-weight: bold;" class="text-danger">Deactivate Rule</span>
                            </div>
                        </button>
                        <button invisible="active" class="oe_stat_button" name="toggle_active" type="object"
                                icon="fa-play">
                            <div class="o_stat_info o_form_field">
                                <span style="font-weight: bold;" class="text-success">Activate Rule</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- Basic Configuration -->
                    <group>
                        <group string="Basic Configuration">
                            <field name="readonly"/>
                            <field name="disable_debug"/>
                            <field name="disable_login"/>
                        </group>
                        <group string="Default for New Users">
                            <field name="default_internal_user"/>
                            <field name="default_portal_user"/>
                        </group>
                    </group>

                    <!-- User &amp; Company Assignment -->
                    <group>
                        <group string="Users Assignment">
                            <field name="apply_by_user_groups"/>
                            <field name="user_group_ids" widget="many2many_tags" invisible="not apply_by_user_groups"/>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Company Assignment">
                            <field name="apply_without_companies"/>
                            <field name="company_ids" widget="many2many_tags" invisible="apply_without_companies"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Menu &amp; Navigation Controls -->
                        <page string="Hide Menus">
                            <field name="hide_menu_ids" options="{'no_create': True}">
                                <list>
                                    <field name="name" string="Menu"/>
                                </list>
                            </field>
                        </page>

                        <!-- Model-Level Access Control -->
                        <page string="Model Access (Restrict)">
                            <field name="model_access_ids">
                                <list editable="bottom">
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="hide_report_ids"
                                           widget="many2many_tags"
                                           domain="[('action_id.binding_model_id', '=', model_id), ('action_id.type', '=', 'ir.actions.report')]"
                                           options="{'no_create': True}"
                                           string="Reports"/>
                                    <field name="hide_action_ids"
                                           widget="many2many_tags"
                                           domain="[('action_id.binding_model_id', '=', model_id), ('action_id.type', '!=', 'ir.actions.report')]"
                                           options="{'no_create': True}"
                                           string="Actions"/>
                                    <field name="hide_view_type_ids" widget="many2many_tags"
                                           options="{'no_create': True}" string="Views"/>
                                    <field name="hide_read" string="Read"/>
                                    <field name="hide_create" string="Create"/>
                                    <field name="hide_edit" string="Edit"/>
                                    <field name="hide_unlink" string="Delete"/>
                                    <field name="hide_archive" string="Archive"/>
                                    <field name="hide_unarchive" string="Unarchive"/>
                                    <field name="hide_duplicate" string="Duplicate"/>
                                    <field name="hide_import" string="Import"/>
                                    <field name="hide_export" string="Export"/>
                                    \
                                    <field name="hide_add_property" string="Add Property"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- Field-Level Access Control -->
                        <page string="Field Access">
                            <field name="field_access_ids">
                                <list editable="bottom">
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="field_ids" options="{'no_create': True}"
                                           domain="[('model_id', '=', model_id)]" widget="many2many_tags"/>
                                    <field name="invisible"/>
                                    <field name="readonly"/>
                                    <field name="required"/>
                                    <field name="remove_create_option"/>
                                    <field name="remove_edit_option"/>
                                    <field name="remove_internal_link"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- Conditional Field Access -->
                        <page string="Conditional Field Access">
                            <field name="field_conditional_access_ids">
                                <list>
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="attrs_field_id"/>
                                    <field name="attrs_type"/>
                                    <field name="attrs_domain"/>
                                    <field name="domain_on_field_id"/>
                                    <field name="field_domain"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="apply_attrs" column_invisible="1"/>
                                    <field name="apply_field_domain" column_invisible="1"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                                <form>
                                    <field name="model" invisible="1"/>
                                    <field name="access_studio_id" invisible="1"/>
                                    <group>
                                        <field name="model_id"/>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="apply_attrs"/>
                                        </group>
                                        <group>
                                            <field name="apply_field_domain"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Attributes" invisible="apply_attrs != True">
                                            <group>
                                                <field name="attrs_field_id" required="apply_attrs"/>
                                                <field name="attrs_type" widget="radio"/>
                                                <field name="attrs_domain" widget="domain" required="apply_attrs"
                                                       options="{'model': 'model'}"/>
                                            </group>
                                        </page>
                                        <page string="Domain" invisible="apply_field_domain != True">
                                            <group>
                                                <field name="domain_on_field_id" required="apply_field_domain"/>
                                                <field name="domain_field_relation"/>
                                                <field name="field_domain" widget="domain" required="apply_field_domain"
                                                       options="{'model': 'domain_field_relation'}"/>
                                            </group>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>

                        <!-- Domain-Based Access Control -->
                        <page string="Domain-Based Access">
                            <field name="domain_access_ids">
                                <list>
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="domain"/>
                                    <field name="soft_restrict"/>
                                    <field name="restrict_read"/>
                                    <field name="restrict_write"/>
                                    <field name="restrict_create"/>
                                    <field name="restrict_unlink"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                                <form>
                                    <field name="access_studio_id" invisible="1"/>
                                    <field name="model"/>
                                    <group>
                                        <group>
                                            <field name="model_id" options="{'no_create': True}"/>
                                            <field name="domain" widget="domain"
                                                   options="{'model': 'model'}"/>
                                        </group>
                                        <group>
                                            <field name="soft_restrict"/>
                                            <field name="restrict_read"/>
                                            <field name="restrict_write"/>
                                            <field name="restrict_create"/>
                                            <field name="restrict_unlink"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- Button &amp; Tab Access -->
                        <page string="Button &amp; Tab Access">
                            <field name="hide_buttons_tabs_ids">
                                <list editable="bottom">
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="hidden_button_ids"
                                           widget="many2many_tags"
                                           domain="[('model', '=', model), ('node_option', '=', 'button')]"
                                           options="{'no_create': True}"/>
                                    <field name="hidden_tab_ids"
                                           widget="many2many_tags"
                                           domain="[('model', '=', model), ('node_option', '=', 'page')]"
                                           options="{'no_create': True}"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- Search Panel Access -->
                        <page string="Search Panel Access">
                            <field name="search_panel_access_ids">
                                <list editable="bottom">
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="hide_search_panel"/>
                                    <field name="hidden_filter_ids"
                                           widget="many2many_tags"
                                           domain="[('model', '=', model), ('node_option', '=', 'filter')]"
                                           options="{'no_create': True}"/>
                                    <field name="hidden_groupby_ids"
                                           widget="many2many_tags"
                                           domain="[('model', '=', model), ('node_option', '=', 'groupby')]"
                                           options="{'no_create': True}"/>
                                    <field name="hide_custom_filter"/>
                                    <field name="hide_custom_group"/>
                                    <field name="hide_unlink_in_favorites"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- Model-Specific Chatter -->
                        <page string="Chatter Access">
                            <field name="chatter_access_ids">
                                <list editable="bottom">
                                    <field name="model_id" options="{'no_create': True}"/>
                                    <field name="model" column_invisible="1"/>
                                    <field name="hide_chatter"/>
                                    <field name="hide_send_message"/>
                                    <field name="hide_log_notes"/>
                                    <field name="hide_schedule_activity"/>
                                    <field name="hide_search_message_icon"/>
                                    <field name="hide_attachment_icon"/>
                                    <field name="hide_followers_icon"/>
                                    <field name="hide_follow_unfollow"/>
                                    <field name="access_studio_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <!-- Global Feature Controls -->
                        <page string="Global Access">
                            <group>
                                <group string="Data Import &amp; Export">
                                    <field name="hide_import"/>
                                    <field name="hide_export"/>
                                </group>

                                <group string="Search &amp; Filtering">
                                    <field name="hide_search_panel"/>
                                    <field name="hide_custom_filter"/>
                                    <field name="hide_custom_group"/>
                                    <field name="hide_unlink_in_favorites"/>
                                </group>

                                <group string="Record Operations">
                                    <field name="hide_create"/>
                                    <field name="hide_edit"/>
                                    <field name="hide_unlink"/>
                                    <field name="hide_duplicate"/>
                                    <field name="hide_archive"/>
                                    <field name="hide_unarchive"/>
                                    <field name="hide_add_property"/>
                                </group>

                                <group string="Chatter Settings">
                                    <field name="hide_chatter"/>
                                    <field name="hide_send_message"/>
                                    <field name="hide_log_notes"/>
                                    <field name="hide_schedule_activity"/>
                                    <field name="hide_search_message_icon"/>
                                    <field name="hide_attachment_icon"/>
                                    <field name="hide_followers_icon"/>
                                    <field name="hide_follow_unfollow"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="act_window_access_studio" model="ir.actions.act_window">
        <field name="name">Access Studio</field>
        <field name="res_model">access.studio</field>
        <field name="view_mode">list,form</field>
        <field name="path">access_studio</field>
        <field name="context">{'search_default_all': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure access and UI restrictions for your users.
            </p>
            <p>
                Use Simplified Access Control to control import/export, search bar, record actions, chatter, and more.
                Toggle the
                options to customize the user experience and security for your business needs.
            </p>
        </field>
    </record>

    <record id="view_node_data_list" model="ir.ui.view">
        <field name="name">view.node.data.list</field>
        <field name="model">view.node.data</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name"/>
                <field name="model_id"/>
                <field name="node_option"/>
                <field name="attribute_name"/>
                <field name="attribute_string"/>
                <field name="button_type"/>
                <field name="is_smart_button"/>
                <field name="view_name"/>
            </list>
        </field>
    </record>
</odoo>
