<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-inherit="web.SearchBarMenu" t-inherit-mode="extension">
        <!-- Hide custom filter separater -->
        <xpath expr="//t[@t-if='filterItems.length']" position="attributes">
            <attribute name="t-if" add="!this.hideCustomFilter" separator=" and " />
        </xpath>

        <!-- Hide add custom filter button -->
        <xpath expr="//DropdownItem[contains(@class, 'o_add_custom_filter')]" position="attributes">
            <attribute name="t-if" add="!this.hideCustomFilter" separator=" and " />
        </xpath>
    </t>

    <!-- Hide delete in favorites icon -->
    <t t-inherit="web.SearchBarMenu.FavoriteItem" t-inherit-mode="extension">
        <xpath expr="//i[contains(@class, 'fa fa-trash-o')]" position="attributes">
            <attribute name="t-if" add="!this.hideDeleteInFavorites" separator=" and "/>
        </xpath>
    </t>

    <!-- Hide search panel -->
    <t t-inherit="web.SearchBar" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o_cp_searchview')]" position="attributes">
            <attribute name="t-if" add="!this.hideSearchPanel" separator=" and " />
        </xpath>
    </t>

</templates>
