<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_access_studio" model="ir.ui.view">
        <field name="name">res.users.form.access.studio</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Inject a dedicated page inside the main notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Access Management" name="access_management">
                    <field name="access_studio_ids">
                        <list create="0" delete="0">
                            <field name="name"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                            <field name="write_uid"/>
                            <field name="write_date"/>
                            <field name="active" widget="boolean_toggle"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
